

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context="com.example.vicky.e_coin.AtmTrans">
	<com.rengwuxian.materialedittext.MaterialEditText android:layout_width="350dp"
	                                                  android:layout_height="wrap_content"

	                                                  android:id="@+id/atmtrans"
	                                                  android:hint="ATM_PIN"
	                                                  android:inputType="number"
	                                                  app:met_textColorHint="@color/text"
	                                                  app:met_textColor="@color/text"
	                                                  app:met_iconPadding="1px"
	                                                  app:met_iconRight="@drawable/ic_atm"
	                                                  app:layout_constraintLeft_toLeftOf="parent"
	                                                  app:layout_constraintRight_toRightOf="parent"
	                                                  app:layout_constraintTop_toTopOf="parent"
	                                                  android:layout_marginTop="44dp"
	                                                  app:layout_constraintHorizontal_bias="0.491"/>
	<com.rengwuxian.materialedittext.MaterialEditText android:layout_width="350dp"
	                                                  android:layout_height="wrap_content"
	                                                  android:hint="Remarks"
	                                                  android:inputType="text"
	                                                  app:met_textColorHint="@color/text"
	                                                  app:met_textColor="@color/text"
	                                                  app:met_iconPadding="1px"
	                                                  app:met_iconRight="@drawable/ic_remarks"
	                                                  app:layout_constraintLeft_toLeftOf="parent"
	                                                  app:layout_constraintRight_toRightOf="parent"
	                                                  android:id="@+id/materialEditText" android:layout_marginTop="44dp"
	                                                  app:layout_constraintTop_toBottomOf="@+id/atmtrans"
	                                                  app:layout_constraintHorizontal_bias="0.491"/>
	<Button
			android:text="Submit"
			android:layout_width="350dp"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/atmtransonclick"
			android:background="@drawable/bg_aqua"
			app:layout_constraintHorizontal_bias="0.491"
			android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/materialEditText"/>
	<Button
			android:text="CANCEL TRANSACTION"
			android:background="@drawable/bg_red"
			android:layout_width="350dp"
			android:layout_height="wrap_content"
			android:id="@+id/cancel_atm" app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.491"
			android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/atmtransonclick"/>
</android.support.constraint.ConstraintLayout>
