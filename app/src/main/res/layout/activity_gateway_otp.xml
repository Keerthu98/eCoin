<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.vicky.e_coin.GatewayOtp">

	<com.rengwuxian.materialedittext.MaterialEditText android:layout_width="350dp"
	                                                  android:layout_height="wrap_content"
	                                                  android:hint="OTP"
	                                                  android:inputType="number"
	                                                  app:met_textColorHint="@color/black"
	                                                  app:met_iconPadding="1px"
	                                                  app:met_iconRight="@drawable/ic_remarks"
	                                                  app:layout_constraintLeft_toLeftOf="parent"
	                                                  app:layout_constraintRight_toRightOf="parent"
	                                                  android:id="@+id/otp"
	                                                  app:layout_constraintHorizontal_bias="0.491"
	                                                  android:layout_marginBottom="240dp"
	                                                  app:layout_constraintBottom_toTopOf="@+id/imageView3"/>

	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="144dp" app:srcCompat="@drawable/paypal_logo"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" android:id="@+id/imageView3"
			app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp"/>
	<Button
			android:text="SUBMIT"
			android:layout_width="350dp"
			android:background="@drawable/bg_aqua"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/otpsend" android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/otp"
			app:layout_constraintHorizontal_bias="0.498"/>
	<TextView
			android:text="OTP has been sent"
			android:textAlignment="center"
			android:textSize="11pt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"/>
	<TextView
			android:text=""
			android:textSize="10pt"
			android:textAlignment="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/mobile" app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="40dp"
			app:layout_constraintTop_toBottomOf="@+id/textView3"/>
</android.support.constraint.ConstraintLayout>
